<%- include('../components/header.ejs') %>
<%- include('../components/navbar.ejs') %>
<%- include('../components/sidebar.ejs') %>
<div class="content-warp">
  <div class="account-regist">
    <nav aria-label="breadcrumb" class="pt-5">
      <ol class="breadcrumb small bg-dark text-light  w-25 justify-content-center  ml-5 mb-0">
        <li class="breadcrumb-item">后台</li>
        <li class="breadcrumb-item">账户</li>
        <li class="breadcrumb-item">账户注册</li>
      </ol>
    </nav>
    <form class="w-25 mx-auto py-4 small" method="post" action="/admin/regist">
      <div class="form-group">
        <label for="username">昵称</label>
        <input type="text" class="form-control" id="username"  name="name" aria-describedby="nameHelp" placeholder="Enter name" required>
        <small id="nameHelp" class="form-text text-muted">发布文章时显示的作者昵称</small>
      </div>
      <div class="form-group">
        <label for="useraccount">账号</label>
        <input type="text" class="form-control" id="useraccount" name="account" aria-describedby="accountHelp" placeholder="Account" required>
        <small id="accountHelp" class="form-text text-muted">后台登录账号</small>
      </div>
      <div class="form-group">
        <label for="userpassword">密码</label>
        <input type="password" class="form-control" id="userpassword"  name="password" placeholder="Password" required>
      </div>
      <button type="submit" class="btn btn-info  btn-block">注册</button>
    </form>
    <nav aria-label="breadcrumb" class="pt-3">
      <ol class="breadcrumb small bg-dark text-light w-25 justify-content-center ml-5 mb-0">
        <li class="breadcrumb-item">后台</li>
        <li class="breadcrumb-item">账户</li>
        <li class="breadcrumb-item">账户管理</li>
      </ol>
    </nav>
  </div>
</div>
<%- include('../components/footer.ejs') %>
