<%- include('../components/header.ejs') %>
  <%- include('../components/navbar.ejs') %>
    <%- include('../components/sidebar.ejs', {active:active}) %>
      <div class="content-warp">
        <div class="edit-artical">
          <nav aria-label="breadcrumb" class="pt-5">
            <ol class="breadcrumb small bg-dark text-light  w-25 justify-content-center  ml-5 mb-0">
              <li class="breadcrumb-item">后台</li>
              <li class="breadcrumb-item">文章</li>
              <li class="breadcrumb-item">文章修改</li>
            </ol>
          </nav>
          <form class="w-50 mx-auto py-4 small" method="post" action="/posts/edit/<%= post._id %>">
            <div class="form-group">
              <label for="title">标题</label>
              <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" required value="<%= post.title %>">
            </div>
            <div class="form-group">
              <label for="digest">摘要</label>
              <textarea class="form-control" id="digest" name="digest" rows="4" placeholder="Enter digest with Markdown" required><%= post.digest %></textarea>
            </div>
            <div class="form-group">
              <label for="content">正文内容</label>
              <textarea class="form-control" id="content" name="content" rows="30" placeholder="Enter content with Markdown" required><%= post.content %></textarea>
            </div>
            <div class="form-group">
              <label for="tags">标签</label>
              <input type="text" class="form-control" id="tags" name="tags" placeholder="逗号分割输入文章所属标签" required value="<%= post.tags %>">
            </div>
            <button type="submit" class="btn btn-info  btn-block w-50 m-auto">修改</button>
          </form>
        </div>
      </div>
<%- include('../components/footer.ejs') %>
