<div class="list-group my-lg-5 mb-4">
  <div class="list-group-item flex-column align-items-start active bg-dark border-dark">
    <div class="d-flex w-100 justify-content-between">
      <span class="mb-1"><img src="/svg/tags.svg" class="d-inline-block align-top mr-2">热门标签</span>
    </div>
  </div>
  <div  class="list-group-item  flex-column align-items-start">
    <div class="d-flex w-100  flex-wrap">
    <% uniqueTags.forEach(function(uniqueTag){ %>
      <a href="/posts/tags/<%= uniqueTag %>" class="badge badge-info m-2"><%= uniqueTag %></a>
    <% }) %>
    </div>
  </div>
</div>
